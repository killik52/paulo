<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/card_shadow_background"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/textViewNomeArtigoResumo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/azul_escuro_principal"
        android:text="Nome do Artigo"/>

    <TextView
        android:id="@+id/textViewQuantidadeVendidaArtigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/cinza_texto"
        android:text="Quantidade Vendida: 10"/>

    <TextView
        android:id="@+id/textViewTotalVendidoArtigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/roxo_artigo"
        android:text="Total Vendido: R$ 250,00"/>
</LinearLayout>